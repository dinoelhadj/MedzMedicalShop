@code {

    [Parameter]
    public bool Isloged { get; set; }

    bool expandSubNav { get; set; }

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "true";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void GoToCardio()
    {
        sf.isCardio = true;
        sf.isDentaire = false;
        sf.isGyne = false;
        NavManager.NavigateTo("cardio");
    }
    private void GoToDentaire()
    {
        sf.isCardio = false;
        sf.isDentaire = true;
        sf.isGyne = false;
        NavManager.NavigateTo("dentaire");
    }
    private void GoToGyne()
    {
        sf.isCardio = false;
        sf.isDentaire = false;
        sf.isGyne = true;
        NavManager.NavigateTo("gyne");

    }
}
